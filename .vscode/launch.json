{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8888
            },
            "preLaunchTask": "debug-odoo",
            "postDebugTask": "re-run-odoo",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/opt/odoo",
                }
            ],
        }
    ]
}